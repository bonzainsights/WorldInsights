# WorldInsights Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# Application Settings
# ============================================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# ============================================
# Database Configuration
# ============================================
DUCKDB_PATH=./data/worldinsights.duckdb
DATABASE_URL=duckdb:///./data/worldinsights.duckdb

# ============================================
# Mail Configuration (for email verification)
# ============================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=noreply@worldinsights.com

# ============================================
# API Configuration
# ============================================
# Rate limiting (requests per minute)
API_RATE_LIMIT=100
# Timeout in seconds
API_TIMEOUT=30
# Number of retry attempts
API_RETRY_COUNT=3

# ============================================
# Cache Configuration
# ============================================
CACHE_TYPE=simple
# Cache TTL in seconds (3600 = 1 hour)
CACHE_TTL=3600

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/worldinsights.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================
# Security
# ============================================
# Session lifetime in minutes
SESSION_LIFETIME=60
# Enable CSRF protection
WTF_CSRF_ENABLED=True
